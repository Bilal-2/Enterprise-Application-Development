<Page x:Class="Assignment_5.Pages.Burgers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_5"
      xmlns:Pages="clr-namespace:Assignment_5.Pages" 
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="500"
      Title="Burgers">

    <ScrollViewer Height="auto" Width="auto" VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Pages:Tile x:Name="one"  Grid.Column="0" Grid.Row="0"/>
                <Pages:Tile x:Name="two"  Grid.Column="1" Grid.Row="0"/>
                <Pages:Tile x:Name="three"  Grid.Column="0" Grid.Row="1"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>