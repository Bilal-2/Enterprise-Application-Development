<Page x:Class="Assignment_5.Pages.Pizza"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pizza"
      xmlns:Pages="clr-namespace:Assignment_5.Pages" >

    <ScrollViewer Height="auto" Width="auto" VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Pages:Tile x:Name="four"  Grid.Column="0" Grid.Row="0"/>
                <Pages:Tile x:Name="five"  Grid.Column="0" Grid.Row="1"/>
                <Pages:Tile x:Name="six"  Grid.Column="1" Grid.Row="0"/>
                <Pages:Tile x:Name="seven"  Grid.Column="1" Grid.Row="1"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>